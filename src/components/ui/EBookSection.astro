---
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section class={`py-40 bg-white relative overflow-hidden ${className}`}>
  <!-- Sophisticated Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300/50 to-transparent"></div>
    <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300/50 to-transparent"></div>
  </div>
  
  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-extralight tracking-tight text-black mb-6">
        BEYOND MUSIC
      </h2>
      <div class="w-16 h-px bg-gradient-to-r from-transparent via-gray-400/60 to-transparent mx-auto mb-8"></div>
      <p class="text-lg text-gray-600 font-light tracking-wide max-w-2xl mx-auto leading-relaxed">
        Exploring creativity through the written word
      </p>
    </div>
    
    <!-- E-Book Display -->
    <div class="flex flex-col lg:flex-row items-center gap-16 max-w-5xl mx-auto">
      <!-- E-Book Cover -->
      <div class="group cursor-pointer flex-shrink-0">
        <div class="w-80 h-[570px] relative overflow-hidden border border-gray-200/20 rounded-2xl shadow-apple">
          <img 
            src="/images/e-book/The Visual Man Cover.png" 
            alt="The Visual Man E-Book Cover"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-black/10 group-hover:bg-black/5 transition-all duration-700"></div>
          
          <!-- Coming Soon Badge -->
          <div class="absolute top-4 right-4">
            <div class="px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full border border-white/20">
              <span class="text-xs font-medium tracking-wide text-gray-800 uppercase">Coming Soon</span>
            </div>
          </div>
          
          <!-- Subtle glow effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-white/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
        </div>
      </div>
      
      <!-- E-Book Content -->
      <div class="flex-1 space-y-8">
        <div>
          <h3 class="text-3xl font-extralight tracking-wide text-black mb-4">
            The Visual Man
          </h3>
          <p class="text-gray-600 font-light tracking-wide mb-6 text-lg">
            E-Book • In Progress • Creative Writing
          </p>
          <p class="text-gray-500 font-light leading-relaxed text-base mb-6">
            An exploration of visual storytelling and creative expression through the written word. 
            This e-book delves into the intersection of music, art, and narrative, offering insights 
            into the creative process that shapes both sound and story.
          </p>
          <p class="text-gray-400 font-light text-sm italic">
            Artwork by John Ciresi
          </p>
        </div>
        
        <!-- Excerpt Preview -->
        <div class="bg-gray-50/50 border border-gray-200/30 rounded-xl p-6 backdrop-blur-sm">
          <h4 class="text-lg font-light tracking-wide text-black mb-4">
            Preview Excerpt
          </h4>
          <blockquote class="text-gray-600 font-light leading-relaxed italic text-base">
            "In the space between sound and silence, between light and shadow, 
            the visual man emerges—not as a figure, but as a feeling, a moment 
            of pure creative expression that transcends the boundaries of medium..."
          </blockquote>
        </div>
        
        <!-- Status Indicator -->
        <div class="flex items-center space-x-3">
          <div class="w-2 h-2 bg-amber-400 rounded-full animate-pulse"></div>
          <span class="text-sm font-light tracking-wide text-gray-500">
            Currently in development
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
